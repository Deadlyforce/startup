{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="pull-right" style="margin-bottom: 10px; margin-top: 20px;">
                    <a href="{{ path('admin_band_new') }}" class="btn btn-primary pull-right">Add <span class="fa fa-plus-circle"></span></a>
                </div>

                <h1>Bands</h1>

                <table class="table table-striped">
                    <tr>
                        <th>Bands</th>
                        <th>SubGenre</th>
                        <th>&nbsp;</th>
                    </tr>
                    {% for band in bands %}
                        <tr>
                            <td>{{ band.name }}</td>
                            <td>{{ band.subGenre.name }}</td>
                            <td>
                                <a href="{{ path('admin_band_edit', {'id': band.id}) }}" class="btn btn-xs btn-success"><span class="fa fa-pencil"></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
